{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["esnext"],
    "strict": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/tests/*": ["tests/*"],
      "@/*": ["src/*"],
    },
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  }
}
